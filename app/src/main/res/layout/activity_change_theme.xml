<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangeThemeActivity">

    <TextView
        android:id="@+id/change_themes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_themes"
        style="@style/CalcButtonStyle">

    </TextView>

    <Button
        android:id="@+id/theme_1"
        style="@style/CalcButtonStyle"
        android:layout_gravity="center"
        android:text="@string/theme_1">
    </Button>

    <Button
        android:id="@+id/theme_2"
        style="@style/CalcButtonStyle"
        android:layout_gravity="center"
        android:text="@string/theme_2">
    </Button>

</LinearLayout>